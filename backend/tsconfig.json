{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "express"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@llm/*": [
        "llm/*"
      ],
      "@db/*": [
        "db/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/tests/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}